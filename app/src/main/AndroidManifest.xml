<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bearsurvival">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bear_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/bear_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.bearsurvival.HomeScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bearsurvival.GameActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.bearsurvival.GameOverActivity">
        </activity>
        <service android:enabled="true" android:name="com.bearsurvival.BackgroundMusicService" />
    </application>

</manifest>